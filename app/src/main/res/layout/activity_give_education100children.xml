<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiveEducation100children">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include
            android:id="@+id/toolbar_education"
            layout="@layout/appbar_layout"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GIVE EDUCATION TO 100 CHILDREN"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/girleducation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:text="We have made their education our mission. You too can support online to ensure that poverty doesn't stand in the way of a child's education. Support online and take them a step closer to their dreams."/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textStyle="italic"
    android:textSize="20sp"
    android:padding="5sp"
    android:text="No amount is too small. Every penny received can help us change a life!"/>

<Button
    android:id="@+id/bt_educate_donate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/oval"
    android:text="YES, I WANT TO EDUCATION GIRL CHILD"
    android:textColor="@color/colorAccent"
    android:layout_gravity="center"
    android:padding="3sp"
    android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="or"/>

    <Button
        android:id="@+id/bt_educate_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/oval"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:padding="3sp"
        android:layout_margin="10sp"
        android:text="CONTACT US AT - +91-9910191122"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>